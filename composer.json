{
    "name": "getonecms/ext-user",
    "description": "OneCMS user extension",
    "type": "onecms-extension",
    "authors": [
        {
            "name": "Mohammed Shifreen",
            "email": "mshifreen@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "yiisoft/yii2": "~2.0",
        "getonecms/ext-base": "*",
        "getonecms/ext-admin": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "getonecms/dev-tools": "*"
    },
    "autoload": {
        "psr-4": {
            "OneCMS\\User\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OneCMS\\User\\Test\\": "test/"
        }
    },
    "optimize-autoloader": true,
    "repositories": [
        {
            "type": "path",
            "url": "../onecms-ext-base"
        },
        {
            "type": "path",
            "url": "../onecms-ext-admin"
        },
        {
            "type": "vcs",
            "url": "https://github.com/getonecms/dev-tools"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "code-sniff": [
            "php-cs-fixer fix --verbose --dry-run --diff --show-progress=dots --using-cache=no"
        ],
        "code-sniff-format": [
            "php-cs-fixer fix --verbose --show-progress=dots --using-cache=no"
        ],
        "code-analyze": [
            "phpstan"
        ]
    }
}
{
    "name": "webifycms/ext-user",
    "description": "WebifyCMS user extension",
    "type": "webifycms-extension",
    "authors": [
        {
            "name": "Mohammed Shifreen",
            "email": "mshifreen@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "webifycms/ext-base": "dev-main",
        "webifycms/ext-admin": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "webifycms/dev-tools": "*"
    },
    "autoload": {
        "psr-4": {
            "Webify\\User\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webify\\User\\Test\\": "test/"
        }
    },
    "optimize-autoloader": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/webifycms/ext-base"
        },
        {
            "type": "vcs",
            "url": "https://github.com/webifycms/ext-admin"
        },
        {
            "type": "vcs",
            "url": "https://github.com/webifycms/dev-tools"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    },
    "scripts": {
        "code-sniff": [
            "php-cs-fixer fix --verbose --dry-run --diff --show-progress=dots --using-cache=no"
        ],
        "code-sniff-format": [
            "php-cs-fixer fix --verbose --show-progress=dots --using-cache=no"
        ],
        "code-analyze": [
            "phpstan"
        ],
        "test": [
            "phpunit --testdox test"
        ]
    }
}